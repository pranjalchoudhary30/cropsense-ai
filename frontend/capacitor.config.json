{
    "appId": "com.cropsense.app",
    "appName": "CropSense AI",
    "webDir": "dist",
    "server": {
        "androidScheme": "https"
    },
    "plugins": {
        "SplashScreen": {
            "launchShowDuration": 2000,
            "launchAutoHide": true,
            "backgroundColor": "#f0fdf4",
            "androidSplashResourceName": "splash",
            "showSpinner": false
        },
        "StatusBar": {
            "style": "LIGHT",
            "backgroundColor": "#10b981"
        }
    },
    "android": {
        "allowMixedContent": true,
        "captureInput": true,
        "webContentsDebuggingEnabled": true
    }
}